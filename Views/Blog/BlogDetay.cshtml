@model WebProje2.Models.Siniflar.BlogYorum
@{
    ViewBag.Title = "BlogDetay";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}
@using WebProje2.Models.Siniflar
<!DOCTYPE HTML>
<html>
<head>
    <title>Personal Blog a Blogging Category Flat Bootstarp  Responsive Website Template | Single :: w3layouts</title>
    <link href="~/blog/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/blog/css/style.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Gezi Rehberi" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!----webfonts---->
    <link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>
    <!----//webfonts---->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <!--end slider -->
    <!--script-->
    <script type="text/javascript" src="~/blog/js/move-top.js"></script>
    <script type="text/javascript" src="~/blog/js/easing.js"></script>
    <!--/script-->
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 900);
            });
        });
    </script>
    <!---->

</head>
<body>
    <!---header---->
    <!--/header-->
    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
                @foreach (var x in Model.Deger1)
                {
                    <div class="single-grid">
                        <img src="@x.BlogImage" alt="" style="margin-bottom:20px" />
                        <h3><a href="/Blog/BlogDetay/@x.ID">@x.Baslik</a></h3>
                        <p>
                            @x.Aciklama
                        </p>
                    </div>
                }
                @foreach (var y in Model.Deger2)
                {
                    //Yorum kısmı
                    <ul class="comment-list">
                        <li>
                            @CustomHelpers.Image("/Models/avatar.png", "img-responsive")
                            <div class="desc">
                                <p><b>@y.KullaniciAdi:</b><br /> @y.Yorum </p>
                            </div>
                            <div class="clearfix"></div>
                        </li>
                    </ul>
                }
                @Html.Action("YorumYap","Blog")
                

            </div>

                <div class="clearfix"></div>
            </div>
        </div>
    <!---->
</body>
</html>




